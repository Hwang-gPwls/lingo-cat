{
  "name": "@kaia/monorepo",
  "version": "1.0.0",
  "description": "Kaia - Slack real-time translation bot with admin console",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.0",
    "turbo": "^1.10.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "slack",
    "translation",
    "bot",
    "gemini",
    "ai",
    "monorepo",
    "turborepo"
  ],
  "author": "Kaia Team",
  "license": "MIT"
}